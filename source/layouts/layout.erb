<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <title><%= current_page.data.title || "Middleman" %></title>
		<link href="https://fonts.googleapis.com/css?family=IM+Fell+Double+Pica:400,400i|Montserrat:700" rel="stylesheet">
		<% title = current_page.data.title.gsub(/\s+/, "") %>
		<%= stylesheet_link_tag title.downcase %>
    <% if current_page.data.additional_js %>
      <% current_page.data.additional_js.each do |js| %>
      <%= javascript_include_tag js %>
      <% end %>
    <% end %>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
